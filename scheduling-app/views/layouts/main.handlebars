  <style>
    /* Main container to hold the navbar and content */
.container {
  display: flex;
  height: 100vh;
}

/* Vertical navbar on the left */
.navbar {
  width: 250px;
  background-color: #333;
  color: white;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.navbar h2 {
  margin-bottom: 20px;
  color: white;
}

.navbar ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

.navbar li {
  margin-bottom: 15px;
}

.navbar a {
  color: white;
  text-decoration: none;
  font-size: 16px;
  padding: 8px;
  display: block;
}

.navbar a:hover {
  background-color: #555;
  border-radius: 4px;
}

/* Content area to the right of the navbar */
.content {
  flex-grow: 1;
  padding: 20px;
  overflow-y: auto;
}

/* Add a simple background color for the body */
